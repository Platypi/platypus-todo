{
  "private": true,
  "dependencies": {
    "todomvc-app-css": "latest",
    "todomvc-common": "latest"
  },
  "devDependencies": {
    "jasmine-core": "latest",
    "karma": "latest",
    "karma-chrome-launcher": "latest",
    "karma-cli": "latest",
    "karma-coverage": "latest",
    "karma-jasmine": "latest",
    "platypus": "latest",
    "rimraf": "latest",
    "tsd": "^0.6.0-beta.5",
    "typescript": "latest"
  },
  "scripts": {
    "build": "npm run build-examples && npm run build-test",
    "build-examples": "tsc -p build/examples",
    "build-test": "tsc -p build/test",
    "clean": "npm run clean-tsc && npm run clean-coverage",
    "clean-tsc": "rimraf examples/**/*.js* test/**/*.*.js",
    "clean-coverage": "rimraf test/coverage",
    "prepublish": "npm run build",
    "watch-examples": "tsc -p build/examples/watch",
    "watch-test": "tsc -p build/test/watch",
    "test": "npm run tsd && npm run build-test && npm run karma && npm run clean-tsc",
    "karma": "karma start karma.conf.js",
    "tsd": "tsd update -so"
  }
}
